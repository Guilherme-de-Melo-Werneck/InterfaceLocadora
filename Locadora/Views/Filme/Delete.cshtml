@model Locadora.Models.Filme

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Excluir</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
        }

        h3 {
            color: #dc3545;
        }

        .container {
            max-width: 600px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #bd2130;
                border-color: #bd2130;
            }

        .back-link {
            display: inline-block;
            margin-top: 20px;
            color: #007bff;
        }

            .back-link:hover {
                color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="container">
        <h3>Tem certeza de que deseja excluir?</h3>
        <div>
            <h4>Filme</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmeID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmeID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Genero)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Genero)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Sobre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Sobre)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="FilmeID" />
                <button type="submit" class="btn btn-danger">Excluir</button>
                <span> | </span>
                <a asp-action="Index" class="back-link">Voltar para a Lista</a>
            </form>
        </div>
    </div>

</body>
</html>
